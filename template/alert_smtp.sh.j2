#!/bin/bash

# Recipient email address
RECIPIENT="${CRM_alert_recipient}"

# Subject of the email
SUBJECT="Pacemaker Alert: ${CRM_alert_kind} for ${CRM_alert_rsc}"

# Email body
BODY="Pacemaker Alert Details:

Alert Kind: ${CRM_alert_kind}
Resource: ${CRM_alert_rsc}
Node: ${CRM_alert_node}
Task: ${CRM_alert_task}
Status: ${CRM_alert_status}
Timestamp: ${CRM_alert_timestamp}
Description: ${CRM_alert_desc}

This is an automated alert generated by Pacemaker."

# Send email using mailx
echo "${BODY}" | mailx -s "${SUBJECT}" -r "{{ email_sender }}" "${RECIPIENT}"
